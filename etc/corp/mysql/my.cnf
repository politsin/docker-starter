# The MySQL configuration file.

[client]
socket      = /var/run/mysqld/mysqld.sock

[mysqld_safe]
pid-file    = /var/run/mysqld/mysqld.pid
socket      = /var/run/mysqld/mysqld.sock
nice        = 0

[mysqld]
user        = mysql
pid-file    = /var/run/mysqld/mysqld.pid
socket      = /var/run/mysqld/mysqld.sock
basedir     = /usr
datadir     = /var/lib/mysql
tmpdir      = /tmp
lc-messages-dir = /usr/share/mysql
explicit_defaults_for_timestamp
default-time-zone='+03:00'

#common	
max_allowed_packet = 128M
max_connections    = 10
query_cache_type   = 1
query_cache_size   = 0
query_cache_limit  = 8K
thread_cache_size  = 8K
thread_stack       = 8K
host_cache_size    = 8K
open_files_limit   = 8K

#innodb:
innodb_file_per_table = 1
innodb_use_native_aio = 0

#innodb to MIN:
innodb_sort_buffer_size    = 8K
innodb_ft_cache_size       = 8K
innodb_ft_total_cache_size = 8K
table_open_cache           = 8K
innodb_open_files          = 8K

#innodb to MAX:
innodb_buffer_pool_size  = 60M
innodb_log_file_size     = 50M
innodb_log_buffer_size   = 50M
innodb_read_io_threads   = 4
innodb_write_io_threads  = 4
innodb_stats_on_metadata = 0
innodb_buffer_pool_instances    = 4

#buffer sizes
key_buffer_size          = 1M
sort_buffer_size         = 8K
net_buffer_length        = 8K
read_buffer_size         = 1M
read_rnd_buffer_size     = 8K
bulk_insert_buffer_size  = 8K
join_buffer_size         = 8K
max_heap_table_size      = 5M
tmp_table_size           = 5M
                         
#binary log (if enabled) 
binlog_cache_size        = 4K
binlog_stmt_cache_size   = 4K
max_binlog_size          = 5M
expire_logs_days         = 7
                         
#largest impact          
performance_schema       = off
